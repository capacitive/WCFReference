<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>

  <system.web>
    <compilation debug="true" />
  </system.web>
  <!-- When deploying the service library project, the content of the config file must be added to the host's 
  app.config file. System.Configuration does not support config files for libraries. -->
  <system.serviceModel>
    <services>
      <service name="WCFReferenceService.WCFService" behaviorConfiguration="MEX">
        <endpoint
          name="TCPEndpoint"
          address="net.tcp://localhost:9000/WCFReferenceService/"
          binding="netTcpBinding"
          bindingConfiguration="TransactionalTCP"
          contract="WCFReferenceService.IServiceContract">
        </endpoint>
        <endpoint
          name="HTTPEndpoint"
          address="http://localhost:9001/WCFReferenceService/"
          binding="basicHttpBinding"
          contract="WCFReferenceService.IServiceContract">
        </endpoint>
        <endpoint address="MEX" binding="mexHttpBinding" contract="IMetadataExchange" />
        <endpoint address="MEX" binding="mexTcpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <!--To reserve an http port, use netsh:  netsh http add urlacl url=http://+:8002/user="MachineOrDomain\Username"-->
            <add baseAddress="net.tcp://localhost:8877/WCFReferenceService/" />
            <add baseAddress="http://localhost:8878/WCFReferenceService/" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <bindings>
      <netTcpBinding>
        <binding name="TransactionalTCP" transactionFlow="true"/>
      </netTcpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="MEX">
          <!--To avoid disclosing metadata information, 
          set the values below to false before deployment-->
          <serviceMetadata/>

          <!--To receive exception details in faults for debugging purposes, 
          set the value below to true.  Set to false before deployment 
          to avoid disclosing exception information-->
          <serviceDebug includeExceptionDetailInFaults="True" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>
